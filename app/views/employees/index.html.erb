<h1>Employees</h1>

<table class="table table-striped table-borderless">
  <thead class="thead-dark">
    <tr>
      <th>Shop</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Authority</th>
      <th>Email</th>
      <th>Contact</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.shop_id %></td>
        <td><%= employee.first_name %></td>
        <td><%= employee.last_name %></td>
        <td><%= employee.employee_type %></td>
        <td><%= employee.email %></td>
        <td><%= employee.contact %></td>
        <td><%= employee.address %></td>
        <td><i class="fa fa-home" aria-hidden="true"></i><%= link_to 'Show', employee, class:"btn btn-sm btn-secondary text-white" %></td>
        <td><%= link_to 'Edit', edit_employee_path(employee), class:"btn btn-sm btn-secondary text-white" %></td>
        <td><%= link_to 'Delete', employee, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-sm btn-secondary text-white" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Employee', new_employee_path, class:"btn btn-secondary text-white" %>
